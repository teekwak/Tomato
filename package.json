{
  "name": "Tomato",
  "version": "1.0.0",
  "author": "Thomas Kwak <teekwak@gmail.com>",
  "description": "Productivity Tracker...With Tomatoes!",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "npm run webpack && electron .",
    "webpack": "webpack --config ./webpack.config.js",
    "clean": "rm -f ./views/bundle.js && rm -f ./views/bundle.js.map && rm -rf ./dist",
    "test": "jest && rm -rf ./src/*/__snapshots__",
    "codecov": "jest && codecov -t 2df22e04-d498-45ab-9267-dc43e3f2807a",
    "dist": "npm run webpack && build"
  },
  "license": "ISC",
  "build": {
    "appId": "teekwak@gmail.com",
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "@types/react": "^16.0.2",
    "@types/react-dom": "^15.5.3",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^3.2.3",
    "babel-core": "^6.25.0",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "codecov": "^2.3.0",
    "css-loader": "^0.28.4",
    "electron": "^1.7.5",
    "electron-builder": "^19.22.1",
    "eslint": "^4.4.1",
    "eslint-plugin-react": "^7.2.1",
    "jest": "^20.0.4",
    "react-test-renderer": "^15.6.1",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "typescript": "^2.4.2",
    "webpack": "^3.5.4"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
